<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/expense_category"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="@color/colorPrimary"
        android:gravity="left|center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/category_name"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toStartOf="@+id/expense_cost"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/expense_category_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/expense_category_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round_fiber_new_white_48dp" />

    <TextView
        android:id="@+id/expense_cost"
        android:layout_width="96dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal|center_vertical"
        android:text="Cost"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/expense_category_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/expense_notes"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="@color/colorPrimary"
        android:gravity="left|center_vertical"
        android:paddingLeft="8dp"
        android:text="Notes"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/expense_category_icon"
        app:layout_constraintEnd_toStartOf="@+id/expense_date"
        app:layout_constraintStart_toEndOf="@+id/expense_category_icon"
        app:layout_constraintTop_toBottomOf="@+id/expense_category" />

    <TextView
        android:id="@+id/expense_date"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:background="@color/colorPrimary"
        android:gravity="left|center_vertical"
        android:paddingRight="8dp"
        android:text="Date"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/expense_cost"
        app:layout_constraintEnd_toStartOf="@+id/expense_cost"
        app:layout_constraintTop_toBottomOf="@+id/expense_category" />
</android.support.constraint.ConstraintLayout>