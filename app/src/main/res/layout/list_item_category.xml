<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- ImageView for the individual ImageViews that will be populating the ListView -->
        <ImageView
            android:id="@+id/list_view_item_category_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/colorAccent"
            android:contentDescription="@string/content_description_category_icon"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:src="@mipmap/ic_launcher" />

        <!-- TextView for the individual TextViews that will be populating the ListView -->
        <TextView
            android:id="@+id/list_view_item_category_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/category_name"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>