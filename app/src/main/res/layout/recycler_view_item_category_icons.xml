<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/category_icon_image"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:contentDescription="@string/category_name"
        android:foregroundGravity="center"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/category_icon_name"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:text="Icon"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/category_icon_image"
        app:layout_constraintStart_toStartOf="@+id/category_icon_image"
        app:layout_constraintTop_toBottomOf="@+id/category_icon_image" />

</android.support.constraint.ConstraintLayout>